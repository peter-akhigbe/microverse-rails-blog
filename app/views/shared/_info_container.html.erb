<div class="user-container">
  <img class="dp" src="<%= user.photo %>" alt="<%= user.name %>">
  <div class="info-card">
    <p class="name"><%= user.name %></p>
    <p class="post-counter">Number of post: <%= user.posts_counter %></p>
  </div>
</div>

<style>
    .user-container {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin: 10px;
    }

    .dp {
        border: 2px solid black;
        width: 100px;
        height: 100px;
    }

    .info-card {
        display: flex;
        flex-direction: column;
        border: 2px solid black;
        padding: 10px;
        height: 60px;
        width: 320px;
    }

    .name {
        font-weight: bolder;
        font-size: xx-large;
    }

    .post-counter {
        margin-left: auto;
    }
</style>