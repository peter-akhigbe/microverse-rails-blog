<div class="page">
  <div class="post-container">
    <div class="name-and-counter">
      <p>Post #<%= @post.id %> by <%= @user.name %></p>
      <p>Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %></p>
    </div>
    <p><%= @post.text %></p>
  </div>
  <div class="">
    <%= link_to "Add Comment", new_user_post_comment_path(@user, @post) %>
    <%= form_with url: user_post_likes_path(@post.author.id, @post.id) do |form| %>
      <%= form.submit 'Like' %>
    <% end %>
  </div>
  <%= render partial: "shared/comment_container", locals: { post: @post } %>
</div>

<style>
    .page {
        display: grid;
        place-items: center;
    }

    .post-container {
        display: flex;
        flex-direction: column;
        gap: 10px;
        width: 440px;
        padding: 10px;
        border: 2px solid black;
        margin: 2px;
    }

    .name-and-counter {
        display: flex;
        justify-content: space-between;
    }
</style>